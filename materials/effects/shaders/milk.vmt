screenspace_general
{
	$pixshader "milk_ps20"

	$basetexture "_rt_FullFrameFB"
	$texture1    ""
	$texture2    ""
	$texture3    ""

	$x360appchooser 1
	$ignorez        1
	$fix_fb         32768
	"<dx90"
	{
		$no_draw 1
	}
		
	$copyalpha                 0
	$alpha_blend_color_overlay 0
	$alpha_blend               0
	$linearwrite               0
	$linearread_basetexture    0
	$linearread_texture1       0
	$linearread_texture2       0
	$linearread_texture3       0
	
	Proxies
	{
		Equals
		{
			srcVar1			$fix_fb
			resultVar		$flags2
		}
	}
}